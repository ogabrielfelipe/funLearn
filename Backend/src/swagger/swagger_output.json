{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "API - funLearn",
    "description": "Documentação contendo detalhes de como utilizar e como configurar as APIs a serem utilizadas pelo front-end."
  },
  "host": "localhost:3333",
  "basePath": "/",
  "tags": [
    {
      "name": "Administrator",
      "description": "Endpoints"
    },
